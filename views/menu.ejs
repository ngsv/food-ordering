<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
  <title>Ayutthaya - Menu</title>

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/0887870bd7.js" crossorigin="anonymous"></script>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css">
  <link rel="stylesheet" href="/styles/menu.css">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- External JS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  <!-- App JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<%- include('partials/_header') %>

<body>
  <div class="menu">
    <!-- Category tabs that jump to specific section of the menu when clicked -->
    <div class="category-tabs">
      <ul class="nav justify-content-center position-absolute">
        <li class="nav-item">
          <a class="nav-link text-secondary" aria-current="page" href="#appetizers">APPETIZERS</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-secondary" href="#mains">MAINS</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-secondary" href="#sides">SIDES</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-secondary" href="#desserts">DESSERTS</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-secondary" href="#beverages">BEVERAGES</a>
        </li>
      </ul>
    </div>

    <div id="appetizers" style="position: relative; top: -125px"></div>
    <h1 class="menu-category">APPETIZERS</h1>

    <div class="menu-items-container">

      <% appetizers.forEach(appetizer => { %>
      <div class="menu-item-card">
        <div class="">
          <img src='<%= appetizer["image_url"] %>'>
        </div>
        <div class="menu-item-details">
          <div class="title-description">
            <h2><%= appetizer["item_name"] %></h2>
            <p>
              <%= appetizer["description"] %>
            </p>
          </div>
          <div class="price-and-cart">
            <p>$ <%= (appetizer["price"]/100).toFixed(2) %></p> <!-- Shows 2 decimal places -->
            <button type="button" name="button"><i class="fas fa-plus-circle"></i></button>
          </div>
        </div>
      </div>
      <% }) %>

    </div>

    <div id="mains" style="position: relative; top: -100px"></div>
    <h1 class="menu-category">MAINS</h1>

    <div class="menu-items-container">

      <% mains.forEach(main => { %>
      <div class="menu-item-card">
        <div class="">
          <img src='<%= main["image_url"] %>'>
        </div>
        <div class="menu-item-details">
          <div class="title-description">
            <h2><%= main["item_name"] %></h2>
            <p>
              <%= main["description"] %>
            </p>
          </div>
          <div class="price-and-cart">
            <p>$ <%= (main["price"]/100).toFixed(2) %></p>
            <button type="button" name="button"><i class="fas fa-plus-circle"></i></button>
          </div>
        </div>
      </div>
      <% }) %>

    </div>

    <div id="sides" style="position: relative; top: -100px"></div>
    <h1 class="menu-category">SIDES</h1>

    <div class="menu-items-container">

      <% sides.forEach(side => { %>
      <div class="menu-item-card">
        <div class="">
          <img src='<%= side["image_url"] %>'>
        </div>
        <div class="menu-item-details">
          <div class="title-description">
            <h2><%= side["item_name"] %></h2>
            <p>
              <%= side["description"] %>
            </p>
          </div>
          <div class="price-and-cart">
            <p>$ <%= (side["price"]/100).toFixed(2) %></p>
            <button type="button" name="button"><i class="fas fa-plus-circle"></i></button>
          </div>
        </div>
      </div>
      <% }) %>

    </div>

    <div id="desserts" style="position: relative; top: -100px"></div>
    <h1 class="menu-category">DESSERTS</h1>

    <div class="menu-items-container">

      <% desserts.forEach(dessert => { %>
      <div class="menu-item-card">
        <div class="">
          <img src='<%= dessert["image_url"] %>'>
        </div>
        <div class="menu-item-details">
          <div class="title-description">
            <h2><%= dessert["item_name"] %></h2>
            <p>
              <%= dessert["description"] %>
            </p>
          </div>
          <div class="price-and-cart">
            <p>$ <%= (dessert["price"]/100).toFixed(2) %></p>
            <button type="button" name="button"><i class="fas fa-plus-circle"></i></button>
          </div>
        </div>
      </div>
      <% }) %>

    </div>

    <div id="beverages" style="position: relative; top: -100px"></div>
    <h1 class="menu-category">BEVERAGES</h1>

    <div class="menu-items-container">

      <% beverages.forEach(beverage => { %>
      <div class="menu-item-card">
        <div class="">
          <img src='<%= beverage["image_url"] %>'>
        </div>
        <div class="menu-item-details">
          <div class="title-description">
            <h2><%= beverage["item_name"] %></h2>
            <p>
              <%= beverage["description"] %>
            </p>
          </div>
          <div class="price-and-cart">
            <p>$ <%= (beverage["price"]/100).toFixed(2) %></p>
            <button type="button" name="button"><i class="fas fa-plus-circle"></i></button>
          </div>
        </div>
      </div>
      <% }) %>

    </div>
  </div>


  <div class="order-items">

    <h3>My Order</h3>

    <div class="cart-items">
      <!--  -->
    </div>

    <div class="costs">
      <hr>
      <div class="each-cost">
        <p>Subtotal</p>
        <p>$0.00</p>
      </div>
      <div class="each-cost">
        <p>Tax</p>
        <p>$0.00</p>
      </div>
      <div class="each-cost">
        <p>Total</p>
        <p>$0.00</p>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>

</html>
